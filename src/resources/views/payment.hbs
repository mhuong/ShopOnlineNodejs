<div class="page-header">
    <section id="checkout">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-7">
                    <h5 class="mb-3">BILLING DETAILS</h5>
                    <!-- Bill Detail of the Page -->
                    <form method="post" action="/payment/postMail" class="bill-detail">
                        <fieldset>
                            <div class="form-group row">
                                <div class="col">
                                    <input id="name" name="name" class="form-control" placeholder="Name" type="text" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea id="user" name="user" class="form-control">{{user}}</textarea>
                            </div>
                            <div class="form-group">
                                <textarea id="address" name="address" class="form-control" placeholder="Address" required></textarea>
                            </div>
                            <div class="form-group">
                                <input id="Country" name="Country" class="form-control" placeholder="State / Country" type="text" required>
                            </div>
                            <div class="form-group">
                                <input id="theother" name="theother" class="form-control" placeholder="The other sign " type="text" required>
                            </div>
                            <div class="form-group row">
                                <div class="col">
                                    <input id="email" name="email" class="form-control" placeholder="Email Address" type="email" required>
                                </div>
                                <div class="col">
                                    <input id="phone" name="phone" class="form-control" placeholder="Phone Number" type="tel" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea id="notes" name="notes" class="form-control" placeholder="Order Notes" required></textarea>
                            </div>
                        </fieldset>
                    </div>
                        <!-- Bill Detail of the Page end -->
                        <div class="col-xs-12 col-sm-5">
                            <div class="holder">
                                <h5 class="mb-3">YOUR ORDER</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Products</th>
                                                <th>Price</th>
                                                <th class="text-right">Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each cart}}
                                            <tr>
                                                <td>
                                                    <input id="products" name="products" type="text" value="{{name}}">
                                                </td>
                                                <td>
                                                    {{price}}
                                                </td>
                                                <td class="text-right">
                                                    {{qty}}
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                        <tfooter>
                                            <tr>
                                                <td>
                                                    <strong>Cart Subtotal</strong>
                                                </td>
                                                <td class="text-right">
                                                    {{{total}}}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Shipping</strong>
                                                </td>
                                                <td class="text-right">
                                                    Rp 40.000
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>ORDER TOTAL</strong>
                                                </td>
                                                <td class="text-right">
                                                    <input id="ordertotal" name="ordertotal" type="text" value="{{{TotalS}}}">
                                                </td>
                                            </tr>
                                        </tfooter>
                                    </table>
                                </div>

                                <h5 class="mb-3">PAYMENT METHODS</h5>
                                <button type="submit" class="btn btn-primary float-right">Order now <i
                                        class="fa fa-check"></i></button>
                                <div class="clearfix">
                    </form>
            
            </div>
        </div>
</div>
</section>
</div>