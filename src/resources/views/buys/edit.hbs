<div class="mt-4">
    <h3>update set up row.</h3>
    <form class="mt-4" method="post" action="/payment/{{ordertables._id}}?_method=PUT">

        <div class="form-group">
            <label for="name">name:</label>
            <input type="text" class="form-control" value="{{ordertables.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="address">address:</label>
            <textarea class="form-control" id="address" name="address">{{ordertables.address}}</textarea> 
        </div>
        <div class="form-group">
            <label for="email">email:</label>
            <input type="text" class="form-control" value="{{ordertables.email}}" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="phone">phone:</label>
            <input type="text" class="form-control" value="{{ordertables.phone}}" id="phone" name="phone">
        </div>
        <div class="form-group">
            <label for="products">products:</label>
            <input type="text" class="form-control" value="{{ordertables.products}}" id="products" name="products" readonly>
        </div>
        <div class="form-group">
            <label for="ordertotal">ordertotal:</label>
            <input type="text" class="form-control" value="{{ordertables.ordertotal}}" id="ordertotal" name="ordertotal" readonly>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>