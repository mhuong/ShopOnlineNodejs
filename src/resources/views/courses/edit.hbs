<div class="mt-4">
    <h3>Cập nhật sản phẩm.</h3>
    <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">

        <div class="form-group">
            <label for="name">Tên sản phẩm:</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="decription">Mô tả:</label>
            <textarea class="form-control" id="decription" name="decription">{{course.decription}}</textarea> 
        </div>
        
        {{!-- <div class="form-group">
            <label for="image">Hình ảnh sản phẩm:</label>
            <input type="file" class="form-control" value="{{course.image}}" id="image" name="image">
             <label class="custom-file-label" for="inputGroupFile02">{{{course.image}}}</label>
        </div> --}}
       
        <label for="image">Hình ảnh sản phẩm:</label>
        <div class="form-group input-group mb-3">
            <div class="custom-file">
                <input name="image" value="{{course.image}}" type="file" class="custom-file-input" id="image">
                <label class="custom-file-label" for="inputGroupFile02">{{{course.image}}}</label>
            </div>
            <div value="{{course.image}}" class="input-group-append">
                <span class="input-group-text" id="">Upload</span>
            </div> 
        </div>
        <div class="form-group">
            <label for="price">Giá:</label>
            <input type="text" class="form-control" value="{{course.price}}" id="price" name="price">
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>